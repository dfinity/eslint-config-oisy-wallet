{
  "name": "@dfinity/eslint-config-oisy-wallet",
  "version": "0.2.4",
  "license": "Apache-2.0",
  "description": "Shared ESLint configurations from the Oisy Wallet team",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dfinity/eslint-config-oisy-wallet.git"
  },
  "bugs": {
    "url": "https://github.com/dfinity/eslint-config-oisy-wallet/issues"
  },
  "main": "index.mjs",
  "files": [
    "README.md",
    "LICENSE",
    ".oxlintrc.json"
  ],
  "exports": {
    "./oxlintrc": {
      "import": "./.oxlintrc.json",
      "require": "./.oxlintrc.json"
    }
  },
  "scripts": {
    "format": "prettier . --write",
    "format:check": "prettier --check .",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "test": "vitest --run",
    "update:peer": "npm update $(node -e \"const p=require('./package.json');console.log(Object.keys(p.peerDependencies).filter(d=>/eslint|prettier/.test(d)).join(' '))\")"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "typescript",
    "svelte",
    "linting",
    "code-quality",
    "icp",
    "dfinity",
    "oisy",
    "wallet",
    "shared-config",
    "javascript",
    "web-development",
    "best-practices"
  ],
  "peerDependencies": {
    "@dfinity/utils": "*",
    "eslint-plugin-oxlint": "^1.49.0",
    "oxlint": "^1.50.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@typescript-eslint/rule-tester": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=11.5.1 <12.0.0"
  }
}
