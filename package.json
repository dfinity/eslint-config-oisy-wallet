{
  "name": "@dfinity/lint-config-oisy",
  "version": "0.2.4",
  "license": "Apache-2.0",
  "description": "Shared OxLint configurations from the OISY Wallet team",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dfinity/eslint-config-oisy-wallet.git"
  },
  "bugs": {
    "url": "https://github.com/dfinity/eslint-config-oisy-wallet/issues"
  },
  "main": "index.mjs",
  "files": [
    "README.md",
    "LICENSE",
    ".oxlintrc.json",
    "eslint-local-rules.cjs",
    "rules/**/*.cjs"
  ],
  "exports": {
    ".": {
      "import": "./.oxlintrc.base.json",
      "require": "./.oxlintrc.base.json"
    },
    "./svelte": {
      "import": "./.oxlintrc.svelte.json",
      "require": "./.oxlintrc.svelte.json"
    },
    "./vitest": {
      "import": "./.oxlintrc.vitest.json",
      "require": "./.oxlintrc.vitest.json"
    },
    "./eslint-local-rules": {
      "import": "./eslint-local-rules.cjs",
      "require": "./eslint-local-rules.cjs"
    }
  },
  "scripts": {
    "format": "prettier . --write",
    "format:check": "prettier --check .",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "test": "vitest --run"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "oxlint",
    "oxlint-config",
    "typescript",
    "svelte",
    "linting",
    "code-quality",
    "icp",
    "dfinity",
    "oisy",
    "wallet",
    "shared-config",
    "javascript",
    "web-development",
    "best-practices"
  ],
  "peerDependencies": {
    "@dfinity/utils": "*",
    "eslint-plugin-oxlint": "^1.49.0",
    "oxlint": "^1.50.0",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@typescript-eslint/rule-tester": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=11.5.1 <12.0.0"
  }
}
